<%- model_class = Guitar -%>
<div class="page-header">
  <h1><%=t '.title', :default => Guitar %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:model) %></dt>
      <dd><pre class="prettyprint"><%= @guitar.model %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:make) %></dt>
      <dd><pre class="prettyprint"><%= @guitar.make %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:price) %></dt>
      <dd><pre class="prettyprint"><%= @guitar.price %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              guitars_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_guitar_path(@guitar), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              guitar_path(@guitar),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

